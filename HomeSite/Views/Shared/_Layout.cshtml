<!DOCTYPE html>
<html lang="ru" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Just1x</title>
    @RenderSection("Meta", required: false)
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HomeSite.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/myfavicon.ico" />
</head>
<body>
    <header>
        <nav data-bs-theme="dark" class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <span class="navbar-brand main-text">Just1x</span>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-secondary" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        @if (Context.User.Identity.Name != null)
                        {
                            @* <li class="nav-item dropdown">
                                <button class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    Сервер
                                </button>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li><a class="nav-link text-secondary dropdown-item" asp-area="" asp-controller="Server" asp-action="Index">Мои сервера</a></li>
                                    <li><a class="nav-link text-secondary dropdown-item" asp-area="" asp-controller="Server" asp-action="Configure">Настройки сервера</a></li>
                                    <li><a class="nav-link text-secondary dropdown-item" asp-area="" asp-controller="Server" asp-action="Mods">Моды сервера</a></li>
                                </ul>
                            </li> *@
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-area="" asp-controller="Server" asp-action="Index">Сервер</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-area="" asp-controller="Fileshare" asp-action="Index">Обменник</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-secondary" asp-area="" asp-controller="Home" asp-action="Privacy">Политика конфиденциальности</a>
                        </li>
                    </ul>
                    @await Html.PartialAsync("_LoginPartial")
                </div>
               
@*                 <button class="btn btn-info" id="btnSwitch">
                    Theme
                </button> *@
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="d-flex border-top footer text-muted">
        <div class="container">
            &copy; 2024-2025 - Just1x (beta)
        </div>
        <div class="me-2">
            <a class="nav-link text-secondary" asp-area="" asp-controller="Home" asp-action="Changes">Изминэния дон</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
