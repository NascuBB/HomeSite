@model HomeSite.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}


<div class=" d-flex text-center align-items-center align-content-center justify-content-center flex-column">
    <h1 class="text-white display-4">Войти</h1>
    <br />
    <div class="row">
        <div>
            <form class="d-flex flex-column gap-2" asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Почта или имя пользователя</label>
                    <input asp-for="EmailOrUsername" class="form-control" />
                    <span asp-validation-for="EmailOrUsername" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Пароль</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="flex-row d-flex gap-1 justify-content-center">
                    <label for="RememberMe">Запомнить меня</label>
                    <input class="cb-green" data-val="true" data-val-required="The RememberMe field is required." id="RememberMe" name="RememberMe" type="checkbox" value="true">
                </div>
                <div class="form-group">
                    <input type="submit" value="Войти" class="btn btn-green" />
                </div>
            </form>

            <div class="mt-2">
                Нет аккаунта? <a asp-action="Register">Создай новый</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
