@model GetFileShareViewModel
@using HomeSite.Helpers
@{
    ViewData["Title"] = "Download";
}
<link rel="stylesheet" href="~/css/fileshareGet.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<div class="container py-3">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="download-card p-4 p-md-5 mb-4">
                <div class="text-center mb-4">
                    <i class="bi bi-file-earmark-text file-icon mb-3 fs-1"></i>
                    <h2 class="mb-3">Файл готов к скачиванию</h2>
                    <p class="text-muted">Кто-то поделился с вами этим файлом. Вы можете скачать его на свое устройство.</p>
                </div>

                <!-- Информация о файле -->
                <div class="file-info p-3 mb-4">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <i class="bi @Helper.GetIconClass(Model.File.Extension!) file-icon mb-2"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="mb-1" id="fileName">@Model.File.OriginalName</h5>
                            <div class="d-flex flex-wrap text-muted small">
                                <span class="me-3"><i class="bi bi-person-fill me-1"></i> Владелец: @Model.Username</span>
                                <span class="me-3"><i class="bi bi-calendar-event me-1"></i>@Model.File.DateUploaded.ToShortDateString()</span>
                                <span><i class="bi bi-file-earmark-bar-graph me-1"></i> @Helper.FormatFileSize(Model.File.Size)</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Кнопка скачивания -->
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mb-4">
                    <a href="/shared/downloadfile?id=@Model.File.FileId" type="button" class="btn btn-green btn-download">
                        <i class="bi bi-download me-2"></i> Скачать файл
                    </a>
                </div>

                <!-- Дополнительная информация -->
                <div class="alert alert-warning mt-4">
                    <h5 class="alert-heading"><i class="bi bi-exclamation-triangle-fill me-2"></i> Внимание!</h5>
                    <p class="mb-0">Скачивайте файлы только от доверенных отправителей. Проверяйте файлы антивирусом перед открытием.</p>
                </div>
            </div>

            <!-- Инструкция -->
            <div class="download-card p-4 p-md-5">
                <h4 class="mb-3"><i class="bi bi-question-circle-fill me-2" style="color: #00df00"></i> Не получается скачать?</h4>
                <ol class="list-group list-group-numbered list-group-flush">
                    <li class="list-group-item bg-transparent">Нажмите кнопку "Скачать файл" выше</li>
                    <li class="list-group-item bg-transparent">Если скачивание не началось автоматически, проверьте папку "Загрузки"</li>
                    <li class="list-group-item bg-transparent">Для мобильных устройств: удерживайте кнопку скачивания и выберите "Сохранить файл"</li>
                </ol>
            </div>
        </div>
    </div>
</div>