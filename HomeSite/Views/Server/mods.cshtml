@model ModsViewModel
@{
    ViewData["Title"] = "Edit mods";   
}
<style>
    .upload-width{
        width: 100% !important;
    }
    @@media(min-width: 564px){
        .upload-width {
            width: 75% !important;
        }
    }
</style>
@if(Model.ModsInstalled)
{
    @Html.AntiForgeryToken()
    <div class=" d-flex justify-content-center ">
        <h1 class="text-white display-5">Моды сервера @Model.Name</h1>
    </div>

    <div class="table-responsive">
        <table class="table table-striped w-100">
            <thead>
                <tr>
                    <th>Название файла</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var file in Model.Files)
                {
                    <tr>
                        <td style="word-break: break-all;">@file</td>
                        <td>
                            <button class="btn btn-danger" onclick="deleteFile('@file')">Удалить</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="justify-content-center sticky-bottom mb-3 bg-dark">
        <hr />
        <label class="input-group-text bg-dark w-50 mx-auto justify-content-center">Загрузить новый мод</label>
        <div class="mt-1 mx-auto input-group upload-width">
            <input class="form-control" type="file" accept=".jar" id="fileInput">
            <button class="btn btn-green" id="uploadButton" onclick="uploadFile()">Загрузить</button>
        </div>
        <br />
    </div>
}
else
{
    <div class=" d-flex flex-column justify-content-center align-items-center">
        <h1 class="text-white display-5">Моды сервера @Model.Name</h1>
        <br />
        <label>Ты еще не загружал моды на этот сервер. Загрузи их <a href="/Server/configure/@Model.ServerId" >здесь</a></label>
    </div>
}
<script src="~/js/servermods.js"></script>