@model HomeSite.Models.CreateServerViewModel

@{
    ViewData["Title"] = "create";
}

<div class=" d-flex text-center align-items-center align-content-center justify-content-center flex-column">
    <h1 class="display-4 text-white">Создать сервер</h1>
    <br />
    <div class="row">
        <div class="">
            <form class="d-flex flex-column gap-2" asp-action="create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Название</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Описание</label>
                    <br />
                    <label style="margin-top: -5px;"><u class="text-warning">(только латинница)</u></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Версия</label>
                    <select class="form-select" asp-for="Version" aria-label="Select version">
                        @* <option selected>Open this select menu</option> *@
                        <option value="_1_12_2">1.12.2</option>
                        <option value="_1_16_5">1.16.5</option>
                        <option value="_1_19_2">1.19.2</option>
                    </select>
                    <span asp-validation-for="Version" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Создать" class="btn btn-green" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-2">
        <a asp-action="Index" class="btn btn-primary">Назад</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
